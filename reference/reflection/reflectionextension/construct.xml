<refentry xml:id="reflectionextension.construct" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionExtension::__construct</refname>
  <refpurpose>Tworzy obiekt ReflectionExtension</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <constructorsynopsis role="ReflectionExtension">
   <modifier>public</modifier> <methodname>ReflectionExtension::__construct</methodname>
   <methodparam><type>string</type><parameter>name</parameter></methodparam>
  </constructorsynopsis>
  <para>
   Tworzy obiekt <classname>ReflectionExtension</classname>.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>name</parameter></term>
     <listitem>
      <para>
       Nazwa rozszerzenia.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   Rzuca <classname>ReflectionException</classname> jeśli rozszerzenie nie istnieje.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Przykład użycia <classname>ReflectionExtension</classname></title>
    <programlisting role="php">
<![CDATA[
<?php
$ext = new ReflectionExtension('Reflection');

printf('Rozszerzenie: %s (wersja: %s)', $ext->getName(), $ext->getVersion());
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Rozszerzenie: Reflection (wersja: $Revision$)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionExtension::info</methodname></member>
    <member><link linkend="language.oop5.decon.constructor">Konstruktory</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
